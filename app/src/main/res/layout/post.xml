<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:padding="0dp"
    android:background="@color/tan"
    >
    <RelativeLayout
        android:id="@+id/controls"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/bright_tan">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar"
            android:layout_alignParentLeft="true"
            android:layout_height="40dp" />
        <ImageButton
            android:id="@+id/camera"
            android:layout_width="27dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@color/clear"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/postBtn"
            android:layout_marginRight="24dp"
            android:src="@drawable/camera"
            android:layout_height="20dp" />
            />
        <ImageView
            android:id="@+id/preview"
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_toLeftOf="@id/postBtn"
            android:layout_marginRight="12dp"
            android:layout_alignParentTop="true"
            />
        <Button
            android:id="@+id/removeMedia"
            android:tag="font_Vitesse"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="x"
            android:gravity="center"
            android:layout_toLeftOf="@id/preview"
            android:background="@color/clear"
            android:textColor="@color/dark_gray"/>
        <Button
            android:id="@+id/postBtn"
            android:tag="font_Karla_Bold"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Post"
            android:minWidth="120dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_alignParentRight="true"
            android:background="@color/orange"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/postField"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:hint="Start typing here to share a post..."
        android:textColorHint="@color/dark_gray"
        android:background="@drawable/input_solid_white"
        android:padding="16dp"
        android:gravity="top"
        android:tag="font_Karla"
        />

</LinearLayout>