<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dp"
    android:background="@color/tan"
    >
    <ListView
        android:id="@+id/placesList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/tan"
        android:cacheColorHint="@android:color/white"
        android:divider="@color/tan"
        android:dividerHeight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="85dp"
        >
    </ListView>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:background="@color/bright_tan"
        >
        <TextView
            android:tag="font_Vitesse_Medium"
            android:text="Auto Check-In"
            android:textSize="17sp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:tag="font_Karla"
            android:text="We'll check you in automatically if you're near a featured venue."
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="22dp"
            android:textColor="@color/dark_gray"
            android:layout_width="240dp"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/autoSwitch"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textOn="On"
            android:textOff="Off"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:tag="toggle"
            android:layout_alignParentRight="true"/>
        </RelativeLayout>
</RelativeLayout>